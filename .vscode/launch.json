    // ğŸ¨ FRONTEND (Next.js)
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    {
      "name": "ğŸ¨ Frontend: Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "ğŸ¨ Frontend: Attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/frontend",
      "remoteRoot": "/app"
    },

    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // âš™ï¸ BACKEND (Express)
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    {
      "name": "âš™ï¸ Backend: Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "program": "${workspaceFolder}/backend/server.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3001"
      }
    },
    {
      "name": "âš™ï¸ Backend: Attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "/app"
    },
    {
      "name": "âš™ï¸ Backend: Debug with Nodemon",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--inspect=0.0.0.0:9229"],
      "program": "${workspaceFolder}/backend/server.js",
      "restart": true,
      "console": "integratedTerminal"
    },

    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // ğŸ¤– AI ENGINE (Python/Flask)
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    {
      "name": "ğŸ¤– AI Engine: Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/ai-engine/main.py",
      "cwd": "${workspaceFolder}/ai-engine",
      "console": "integratedTerminal",
      "env": {
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PORT": "5000"
      },
      "justMyCode": false
    },
    {
      "name": "ğŸ¤– AI Engine: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/ai-engine",
          "remoteRoot": "/app"
        }
      ]
    },

    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // â˜ï¸ CLOUD RUN (Remote Debug)
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    {
      "name": "â˜ï¸ Cloud Run: Frontend",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "service": {
        "name": "codementor-frontend",
        "containerPort": 3000,
        "resources": {
          "limits": {
            "memory": "512Mi",
            "cpu": "1"
          }
        }
      },
      "target": {
        "image": "codementor-frontend",
        "context": "${workspaceFolder}/frontend",
        "dockerfile": "${workspaceFolder}/frontend/Dockerfile"
      },
      "watch": true,
      "debug": {
        "port": 9229
      }
    },
    {
      "name": "â˜ï¸ Cloud Run: Backend",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "service": {
        "name": "codementor-backend",
        "containerPort": 8080,
        "resources": {
          "limits": {
            "memory": "512Mi",
            "cpu": "1"
          }
        }
      },
      "target": {
        "image": "codementor-backend",
        "context": "${workspaceFolder}/backend",
        "dockerfile": "${workspaceFolder}/backend/Dockerfile"
      },
      "watch": true,
      "debug": {
        "port": 9229
      }
    },
    {
      "name": "â˜ï¸ Cloud Run: AI Engine",
      "type": "cloudcode.cloudrun",
      "request": "launch",
      "service": {
        "name": "codementor-ai-engine",
        "containerPort": 8080,
        "resources": {
          "limits": {
            "memory": "4Gi",
            "cpu": "2"
          }
        }
      },
      "target": {
        "image": "codementor-ai-engine",
        "context": "${workspaceFolder}/ai-engine",
        "dockerfile": "${workspaceFolder}/ai-engine/Dockerfile"
      },
      "watch": true,
      "debug": {
        "port": 5678
      }
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ Full Stack: All Services",
      "configurations": [
        "ğŸ¨ Frontend: Debug",
        "âš™ï¸ Backend: Debug",
        "ğŸ¤– AI Engine: Debug"
      ],
      "stopAll": true
    }
  ]
