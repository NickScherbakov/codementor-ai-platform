{
  "name": "codementor-ai",
  "version": "1.0.0",
  "description": "Intelligent Programming Learning Platform with AI-powered personalized tutoring",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "ai-engine": "cd ai-engine && python main.py",
    "backend": "cd backend && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run backend\" \"npm run ai-engine\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docs:serve": "cd docs && python -m http.server 8080",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:generate-api": "node scripts/generate-openapi.js",
    "docs:update-performance": "node scripts/update-performance-docs.js",
    "diagrams:validate": "node scripts/validate-diagrams.js",
    "diagrams:build": "mmdc -i docs/architecture/*.md -o docs/architecture/images/",
    "benchmark": "node scripts/run-benchmarks.js"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@next/font": "^14.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "typescript": "^5.2.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/node": "^20.8.10",
    "lucide-react": "^0.292.0",
    "framer-motion": "^10.16.4",
    "socket.io-client": "^4.7.4",
    "monaco-editor": "^0.44.0",
    "@monaco-editor/react": "^4.6.0",
    "axios": "^1.6.0",
    "react-query": "^3.39.3",
    "zustand": "^4.4.6",
    "react-hook-form": "^7.47.0",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.2",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.8.0",
    "react-confetti": "^6.1.0",
    "prismjs": "^1.29.0",
    "react-syntax-highlighter": "^15.5.0",
    "@types/prismjs": "^1.26.3"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "jest-environment-jsdom": "^29.7.0",
    "concurrently": "^8.2.2",
    "@types/react-syntax-highlighter": "^15.5.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ai",
    "education",
    "programming",
    "learning",
    "nextjs",
    "typescript",
    "tailwindcss",
    "adaptive-learning",
    "code-mentoring"
  ],
  "author": "CodeMentor AI Team",
  "license": "MIT"
}